{
  "name": "flash-loan-arbitrage-bot",
  "version": "1.0.0",
  "description": "Bot de arbitragem com flash loans para Arbitrum - Aave V3, Uniswap V3, SushiSwap",
  "main": "dist/bot/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot/index.js",
    "dev": "ts-node bot/index.ts",
    "monitor": "ts-node bot/monitor.ts",
    "test:bot": "jest",
    "forge:build": "forge build",
    "forge:test": "forge test -vvv",
    "forge:test:fork": "forge test --fork-url $ARBITRUM_RPC_URL -vvv",
    "deploy:testnet": "forge script script/Deploy.s.sol --rpc-url $ARBITRUM_SEPOLIA_RPC_URL --broadcast --verify",
    "deploy:mainnet": "forge script script/Deploy.s.sol --rpc-url $ARBITRUM_RPC_URL --broadcast --verify",
    "lint:sol": "forge fmt --check",
    "fmt:sol": "forge fmt"
  },
  "keywords": [
    "arbitrage",
    "flash-loan",
    "aave",
    "uniswap",
    "sushiswap",
    "arbitrum",
    "defi",
    "ethereum"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.9.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
