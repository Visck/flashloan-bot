# ==============================================================================
# CONFIGURAÇÃO DO BOT DE ARBITRAGEM COM FLASH LOAN - ARBITRUM
# ==============================================================================
# Copie este arquivo para .env e preencha com seus valores reais
# NUNCA compartilhe sua chave privada ou commite o arquivo .env
# ==============================================================================

# ------------------------------------------------------------------------------
# CHAVES PRIVADAS (CRÍTICO - MANTENHA SEGURO!)
# ------------------------------------------------------------------------------
# Chave privada da carteira que vai executar as transações
# Formato: 0x seguido de 64 caracteres hexadecimais
PRIVATE_KEY=0xsua_chave_privada_aqui

# Chave privada alternativa para testes (opcional)
PRIVATE_KEY_TESTNET=0xsua_chave_privada_testnet_aqui

# ------------------------------------------------------------------------------
# CONFIGURAÇÕES DE RPC - ARBITRUM
# ------------------------------------------------------------------------------
# URL do RPC para Arbitrum Mainnet
# Provedores recomendados: Alchemy, Infura, QuickNode
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/SUA_API_KEY

# URL do RPC para Arbitrum Sepolia (Testnet)
ARBITRUM_SEPOLIA_RPC_URL=https://arb-sepolia.g.alchemy.com/v2/SUA_API_KEY

# WebSocket RPC para monitoramento em tempo real (recomendado para o bot)
ARBITRUM_WSS_URL=wss://arb-mainnet.g.alchemy.com/v2/SUA_API_KEY

# ------------------------------------------------------------------------------
# APIs EXTERNAS
# ------------------------------------------------------------------------------
# API Key do Arbiscan para verificação de contratos
ARBISCAN_API_KEY=sua_api_key_arbiscan

# ------------------------------------------------------------------------------
# ENDEREÇOS DOS CONTRATOS DEPLOYADOS
# ------------------------------------------------------------------------------
# Endereço do contrato FlashLoanArbitrage após deploy
FLASH_LOAN_CONTRACT_ADDRESS=

# ------------------------------------------------------------------------------
# CONFIGURAÇÕES DO BOT
# ------------------------------------------------------------------------------
# Lucro mínimo em USD para executar arbitragem
MIN_PROFIT_USD=5

# Lucro mínimo em porcentagem (0.5 = 0.5%)
MIN_PROFIT_PERCENTAGE=0.5

# Valor máximo do flash loan em USD
MAX_FLASH_LOAN_USD=100000

# Slippage máximo permitido (em basis points, 100 = 1%)
MAX_SLIPPAGE_BPS=100

# Gas price máximo em Gwei (proteção contra spikes)
MAX_GAS_PRICE_GWEI=1

# Intervalo de monitoramento em milissegundos
MONITORING_INTERVAL_MS=1000

# Ativar modo de simulação (true = não executa transações reais)
SIMULATION_MODE=true

# ------------------------------------------------------------------------------
# TOKENS PARA MONITORAR (Arbitrum Mainnet)
# ------------------------------------------------------------------------------
# Lista de tokens separados por vírgula
MONITORED_TOKENS=WETH,USDC,USDT,ARB,WBTC,DAI

# ------------------------------------------------------------------------------
# PARES DE DEX PARA ARBITRAGEM
# ------------------------------------------------------------------------------
# Formato: TOKEN_A/TOKEN_B
ARBITRAGE_PAIRS=WETH/USDC,WETH/USDT,ARB/USDC,WBTC/WETH

# ------------------------------------------------------------------------------
# CONFIGURAÇÕES DE LOG
# ------------------------------------------------------------------------------
# Nível de log: debug, info, warn, error
LOG_LEVEL=info

# Diretório para salvar logs
LOG_DIR=./logs

# Ativar logs detalhados de transações
VERBOSE_TX_LOGS=false

# ------------------------------------------------------------------------------
# NOTIFICAÇÕES (OPCIONAL)
# ------------------------------------------------------------------------------
# Webhook do Discord para notificações
DISCORD_WEBHOOK_URL=

# Bot token do Telegram para notificações
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ------------------------------------------------------------------------------
# CONFIGURAÇÕES AVANÇADAS
# ------------------------------------------------------------------------------
# Número de blocos para confirmar transação
CONFIRMATION_BLOCKS=1

# Timeout para transações em segundos
TX_TIMEOUT_SECONDS=60

# Multiplicador de gas (1.1 = 10% extra)
GAS_MULTIPLIER=1.1

# Ativar proteção contra frontrunning (usar Flashbots/private mempool)
FRONTRUN_PROTECTION=false

# ==============================================================================
# LIQUIDATION BOT - CONFIGURAÇÕES
# ==============================================================================

# ------------------------------------------------------------------------------
# MULTI-RPC CONFIGURATION
# ------------------------------------------------------------------------------
# RPC Primário (Alchemy recomendado)
ARBITRUM_RPC_PRIMARY=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY

# WebSocket Primário (para monitoramento em tempo real)
ARBITRUM_WSS_PRIMARY=wss://arb-mainnet.g.alchemy.com/v2/YOUR_KEY

# RPC Backup 1 (Infura)
ARBITRUM_RPC_BACKUP1=https://arbitrum-mainnet.infura.io/v3/YOUR_KEY

# RPC Backup 2 (Public - fallback)
ARBITRUM_RPC_BACKUP2=https://arb1.arbitrum.io/rpc

# Timeout para chamadas RPC em ms
RPC_TIMEOUT_MS=5000

# Intervalo de health check em ms
RPC_HEALTH_CHECK_INTERVAL_MS=30000

# ------------------------------------------------------------------------------
# GAS STRATEGY
# ------------------------------------------------------------------------------
# Multiplicadores de gas baseados no lucro
GAS_HIGH_PROFIT_MULTIPLIER=1.5
GAS_MEDIUM_PROFIT_MULTIPLIER=1.3
GAS_LOW_PROFIT_MULTIPLIER=1.15

# Máximo percentual do lucro para gastar com gas (0.3 = 30%)
GAS_MAX_PERCENT_OF_PROFIT=0.3

# Limite máximo de gas em gwei
GAS_ABSOLUTE_MAX_GWEI=5.0

# ------------------------------------------------------------------------------
# SUBGRAPH CONFIGURATION (GRATUITO - SEM CUs!)
# ------------------------------------------------------------------------------
# URL do Subgraph Aave V3 Arbitrum
AAVE_SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/aave/protocol-v3-arbitrum

# Intervalo de atualização da lista de usuários em ms
SUBGRAPH_REFRESH_INTERVAL_MS=120000

# Valor mínimo de empréstimo para monitorar (em USD)
SUBGRAPH_MIN_BORROW_USD=100

# Ratio máximo colateral/dívida para filtrar usuários em risco
# 1.5 = muito arriscado (~HF < 1.0)
# 1.8 = risco moderado (~HF < 1.15) - RECOMENDADO
# 2.0 = risco baixo (~HF < 1.3)
MAX_COLLATERAL_RATIO=1.8

# ------------------------------------------------------------------------------
# USER PRIORITIZATION
# ------------------------------------------------------------------------------
# Health factor crítico (liquidação iminente)
PRIORITY_CRITICAL_HF=1.0

# Health factor de alto risco
PRIORITY_HIGH_RISK_HF=1.05

# Health factor de risco médio
PRIORITY_MEDIUM_RISK_HF=1.15

# Máximo de usuários para monitorar
MAX_USERS_TO_MONITOR=1000

# ------------------------------------------------------------------------------
# LIQUIDATION BOT EXECUTION
# ------------------------------------------------------------------------------
# Modo de simulação (true = não executa transações reais)
SIMULATION_MODE=true

# Lucro mínimo para executar liquidação (em USD)
MIN_LIQUIDATION_PROFIT_USD=5

# Número máximo de liquidações simultâneas
MAX_CONCURRENT_LIQUIDATIONS=3

# Intervalo de monitoramento de usuários de alto risco em ms
HIGH_RISK_MONITORING_INTERVAL_MS=1000

# ------------------------------------------------------------------------------
# TELEGRAM NOTIFICATIONS
# ------------------------------------------------------------------------------
# Habilitar notificações Telegram
TELEGRAM_ENABLED=true

# Token do bot Telegram (obter via @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Chat ID para receber notificações
TELEGRAM_CHAT_ID=your_chat_id_here

# Intervalo de relatórios periódicos em ms (3600000 = 1 hora)
TELEGRAM_REPORT_INTERVAL_MS=3600000

# ------------------------------------------------------------------------------
# METRICS & LOGGING
# ------------------------------------------------------------------------------
# Habilitar logging de métricas
ENABLE_METRICS_LOGGING=true

# Nível de log para liquidation bot
LIQUIDATION_LOG_LEVEL=info
